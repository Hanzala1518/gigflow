# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# For transactions, MongoDB must be running as a replica set
# Use MongoDB Atlas or run locally with: mongod --replSet rs0
MONGODB_URI=mongodb://localhost:27017/gigflow

# JWT Configuration
# IMPORTANT: Use a strong, unique secret in production (min 32 chars)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Cookie Configuration
# 7 days in milliseconds (7 * 24 * 60 * 60 * 1000)
COOKIE_MAX_AGE=604800000

# CORS Configuration
# Comma-separated for multiple origins
# Production: Set to your actual frontend domain
CORS_ORIGIN=http://localhost:3000
